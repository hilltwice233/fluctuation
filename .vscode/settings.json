{
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,

  // File nesting for flutter.
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "pubspec.yaml": "pubspec.lock"
  },

  // Default formatter and shell formatter options.
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {"source.organizeImports": true},
  "[shellscript]": {"editor.defaultFormatter": "foxundermoon.shell-format"},
  "[properties]": {"editor.defaultFormatter": "foxundermoon.shell-format"},
  "[ignore]": {"editor.defaultFormatter": "foxundermoon.shell-format"},

  // Language specified formatter.
  "[dart]": {"editor.defaultFormatter": "Dart-Code.dart-code"},

  // Spell check options.
  "cSpell.ignorePaths": [],
  "cSpell.useGitignore": true,
  "cSpell.enableFiletypes": ["*"],
  "cSpell.words": [
    "bools",
    "combinators",
    "esbenp",
    "foxundermoon",
    "ints",
    "pubspec",
    "redeclares",
    "todos",
    "unawaited"
  ]
}
